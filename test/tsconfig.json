{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es2017",
        "noImplicitAny": true,

        "strictFunctionTypes": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,

        "moduleResolution": "node",
        "noEmit": true,
        "baseUrl": ".",
        "allowJs": true,
        "paths": {
            "*": [
                "../src/types/*"
            ]
        },
        "lib": [
          "DOM",
          "ES5",
          "ES2015",
          "ES2016",
          "ES2017",
          "DOM.Iterable"
        ]
    },
    "include": [
        "**/*",
        "../src/**/*"
    ],
    "exclude": [
      "../node_modules/**/*"
    ]
}
